<%- include('partials/header'); %>

  <h1>Sistema de Gestão de Horas Trabalhadas</h1>

  <table>
    <thead>
      <tr>
        <th>Funcionário</th>
        <th>Função</th>
        <th>Registro de Ponto</th>
      </tr>
    </thead>
    <tbody>
      <% employees.forEach(function(employee) { %>
        <tr>
          <td>
            <%= employee.name %>
          </td>
          <td>
            <%= employee.role %>
          </td>
          <td><a href="/timemanagement">Ver registros</a></td>
        </tr>
        <% }); %>
    </tbody>
  </table>
  <%- include('partials/footer'); %>