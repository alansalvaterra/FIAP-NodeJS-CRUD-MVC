<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' type="text/css" href='/stylesheets/style.css' />
</head>

<body>
  <%- include('partials/header'); %>

    <h1>
      <%= title %>
    </h1>
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Email</th>
          <th>Função</th>
          <th>Registro de Ponto</th>
        </tr>
      </thead>
      <tbody>
        <% employees.forEach(function(employee) { %>
          <tr>
            <td><%= employee.name %> <%= employee.lastName %></td>
            <td><%= employee.email %></td>
            <td><%= employee.role %></td>
            <td><a href="/frequency">Ver registros</a></td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <%- include('partials/footer'); %>
</body>

</html>