<%- include('partials/header'); %>

    <h1>Registros de Entrada e Saída</h1>

    <h2>Funcionário: <%= employeeDetails.name %></h2>

    <table>
        <thead>
            <tr>
                <th>Data</th>
                <th>Início</th>
                <th>Término</th>
            </tr>
        </thead>
        <tbody>
            <% checkInOuts.forEach(checkInOut => { %>
               <tr>
                    <td><%= new Date(checkInOut.checkIn).toLocaleDateString('pt-BR') %></td>
                    <td><%= new Date(checkInOut.checkIn).toLocaleTimeString() %></td>
                    <td><%= new Date(checkInOut.checkOut).toLocaleTimeString() %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

   
    <%- include('partials/footer'); %>

  